<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog"
    android:paddingHorizontal="40dp"
    android:layout_marginHorizontal="10dp"
    android:paddingTop="5dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_my_location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ENDERECO"
        android:textSize="24sp"
        android:textColor="#f2f2f2"
        android:fontFamily="@font/quicksand_medium"
        android:letterSpacing="0.15"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_endereco_tv_rua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="RUA"
            android:background="@drawable/selectborder"
            android:gravity="center"
            android:focusable="false"
            android:textColor="#f2f2f2"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_light"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dialog_endereco_tv_bairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="BAIRRO"
            android:gravity="center"
            android:textColorHint="#BEBEBE"
            android:textColor="#f2f2f2"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_light"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/dialog_endereco_tv_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="NÃšMERO"
            android:gravity="center"
            android:focusable="false"
            android:textColor="#f2f2f2"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_light"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dialog_endereco_tv_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="CEP"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:textColorHint="#BEBEBE"
            android:textColor="#f2f2f2"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_light"
            android:layout_weight="1"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:textColor="#f2f2f2"
        android:textSize="26sp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/dialog_endereco_tv_confirma"
        android:letterSpacing="0.08"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:text="VOLTAR"
        android:textColor="#f2f2f2"
        android:layout_gravity="center"
        android:fontFamily="@font/quicksand_light"/>
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_keyboard_arrow_down"
        android:layout_gravity="center"/>

</LinearLayout>