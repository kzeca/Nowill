<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog"
    android:paddingHorizontal="40dp"
    android:layout_marginHorizontal="15dp"
    android:paddingTop="5dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PESSOAL"
        android:textSize="24sp"
        android:textColor="#f2f2f2"
        android:fontFamily="@font/quicksand_medium"
        android:letterSpacing="0.15"/>
    <EditText
        android:id="@+id/dialog_pessoal_et_nome"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:hint="NOME"
        android:background="@drawable/selectborder"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:focusable="false"
        android:textColorHint="#BEBEBE"
        android:textColor="#f2f2f2"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/quicksand"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="DIA"
            android:textColor="#f2f2f2"
            android:fontFamily="@font/quicksand"
            android:id="@+id/dialog_pessoal_tv_dia"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="MÃŠS"
            android:textColor="#f2f2f2"
            android:fontFamily="@font/quicksand"
            android:id="@+id/dialog_pessoal_tv_mes"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="ANO"
            android:textColor="#f2f2f2"
            android:fontFamily="@font/quicksand"
            android:id="@+id/dialog_pessoal_tv_ano"/>
    </LinearLayout>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:hint="CPF"
        android:gravity="center"
        android:focusable="false"
        android:paddingVertical="10dp"
        android:textSize="14sp"
        android:textColorHint="#BEBEBE"
        android:background="@android:color/transparent"
        android:fontFamily="@font/quicksand"
        android:id="@+id/dialog_pessoal_et_cpf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:textColor="#f2f2f2"
        android:textSize="26sp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/dialog_pessoal_tv_confirma"
        android:letterSpacing="0.08"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:text="VOLTAR"
        android:textColor="#f2f2f2"
        android:layout_gravity="center"
        android:fontFamily="@font/quicksand_light"/>
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_keyboard_arrow_down"
        android:layout_gravity="center"/>



</LinearLayout>