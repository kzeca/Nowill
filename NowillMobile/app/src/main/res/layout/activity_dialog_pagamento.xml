<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog"
    android:paddingHorizontal="25dp"
    android:layout_marginHorizontal="15dp"
    android:paddingTop="5dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_payment"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PAGAMENTO"
        android:textSize="24sp"
        android:textColor="#f2f2f2"
        android:fontFamily="@font/quicksand_medium"
        android:letterSpacing="0.15"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:background="@drawable/selectborder"
        android:id="@+id/dialog_pagamento_layout_forma">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_keyboard_arrow_left"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:id="@+id/dialog_pagamento_layout_cartao">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_payment"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARTÃƒO"
                android:fontFamily="@font/quicksand_light"
                android:textColor="#f2f2f2"
                android:layout_gravity="center"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/selectborder"
            android:id="@+id/dialog_pagamento_layout_dinheiro">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_monetization_on_black_24dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DINHEIRO"
                android:fontFamily="@font/quicksand_light"
                android:textColor="#f2f2f2"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_arrow_right" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:textColor="#f2f2f2"
        android:textSize="26sp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/dialog_pagamento_tv_confirma"
        android:letterSpacing="0.08"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:text="VOLTAR"
        android:textColor="#f2f2f2"
        android:layout_gravity="center"
        android:fontFamily="@font/quicksand_light"/>
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_keyboard_arrow_down"
        android:layout_gravity="center"/>

</LinearLayout>